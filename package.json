{
  "name": "gatsby-theme-larsroettig-dev-workspace",
  "private": true,
  "version": "0.0.1",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "clean": "yarn workspace site clean",
    "serve": "yarn workspace site serve",
    "build": "yarn workspace site build",
    "dev": "yarn start",
    "cy:run": "cypress run",
    "cy:open": "cypress open",
    "lint": "eslint --fix --ignore-path .jshintignore -- .",
    "start": "yarn workspace site develop",
    "commit": "commit"
  },
  "workspaces": [
    "@larsroettig-dev/theme",
    "site"
  ],
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@commitlint/prompt-cli": "^8.3.5",
    "@typescript-eslint/eslint-plugin": "^2.31.0",
    "@typescript-eslint/parser": "^2.31.0",
    "cypress": "^4.4.1",
    "eslint": "^7.0.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-config-prettier": "^6.1.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-unicorn": "^19.0.1",
    "husky": "^4.2.5",
    "lerna": "^3.20.2",
    "prettier": "^2.0.5",
    "start-server-and-test": "^1.11.0",
    "typescript": "^3.9.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all"
  }
}
